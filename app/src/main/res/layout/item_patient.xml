<?xml version="1.0" encoding="utf-8"?>
<com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="horizontal"

    app:contentView="@+id/content"
    app:rightMenuView="@+id/right">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_patient"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hz_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:text="姓名"
            android:textColor="@color/blue"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/hz_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="9999年99月99日"
            android:textColor="@color/blue"
            android:textSize="15sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/right"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_table"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/red" />

    </LinearLayout>


</com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>